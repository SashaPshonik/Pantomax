.home
  padding-top 23px
  background-repeat no-repeat
  background-position top center

.home-title
  margin-bottom 25px
  font-family RobotoCondensed-Bold
  font-size rem(59)
  text-transform: uppercase
  background -webkit-linear-gradient(left, #f0e394 0%, #b49b52 100%)
  -webkit-background-clip text
  -webkit-text-fill-color transparent

.home-content
  display grid
  grid-template-columns 35% 33% 30%
  grid-column-gap 15px

.home-sale
  padding-bottom 60px
  align-self end

.top-line
  display flex
  margin-bottom 23px
  &__logo
    margin-right 89px
  &__garanty
    margin-right 30px
    &:last-child
      margin-right 0

.top-line-garanties
  display flex

.garanty
  display flex
  align-items center
  &__icon
    margin-right 8px

.garanty-desc
  color #ededed
  &__percents
    margin-right 7px
    font-family PT-Sans-Bold
    font-size rem(24)
   &__text
    font-family PT-Sans-Regular
    font-size rem(18)

.logo
  display flex
  align-items center
  &__icon
    margin-right 15px

.product-desc
  position relative

.product-tagline
  margin-bottom 12px
  font-family Roboto-Medium
  font-size rem(22)
  line-height 1.2
  color #ffffff

.product-actions
  width 85%
  margin-bottom 13px
  &__item
    position relative
    margin-bottom 9px
    padding 3px 0 7px 37px
    font-family PT-Sans-Regular
    font-size rem(16)
    line-height 1.2
    color #ffffff
    &:before
      content ''
      position absolute
      size(24px)
      left 0
      top 0
      border-radius 50%
      border 1px solid #a26d4a
      background-color redColor
      background-image url('../img/icons/check.png')
      background-repeat no-repeat
      background-position center
    &:after
      content ''
      position absolute
      left 0
      bottom 0
      display block
      width 100%
      height 1px
      background linear-gradient(to right, rgba(120,120,120,0.1) 0%, rgba(120,120,120,0.7) 50%, rgba(120,120,120,0.1) 100%)
    &:last-child
      &:after
        display none

.product-images
  position relative
  &__bottle
    position absolute
    top 25px
    right -45px

.sale
  text-align center
  &__img
    margin-bottom 16px
  &__text
    font-family PT-Sans-Narrow
    font-size rem(19)
    line-height 1.2
    color #ffffff

.sale-info
  display flex
  margin-bottom 25px
  justify-content space-between
  &__text
    position relative
    padding 10px
    border-radius 5px
    background-color rgba(1, 0, 0, 0.4)
    font-family PT-Sans-Narrow
    font-size rem(19)
    color #ffffff
    &:before
      content '*'
      position absolute
      top 10px
      left 3px
      display block
      font-size rem(19)
      color #ffffff

.sale-info-numbers
  &__item
    position relative
    display inline-block
    padding 2px 12px
    background-color #ffffff
    border-radius 4px
    font-family PT-Sans-Narrow-Bold
    font-size rem(50)
    color #000000
    box-shadow 0 2px 3px 0 rgba(27, 27, 27, 0.55),inset 0 1px 2px 0 rgba(255, 255, 255, 0.15)
    &:before
      content ''
      position absolute
      top 50%
      left 0
      transform translateY(-50%)
      display block
      width 100%
      height 1px
      background-color #cecece
    &_no-active
      opacity 0.5

.one-click-form
  position relative
  padding-bottom 25px
  background-color #fffefe
  box-shadow 0 0 40px 0 rgba(254, 213, 91, 0.25)
  border-radius 10px
  &:before
    content ''
    position absolute
    top -10px
    left 0
    display block
    width 100%
    height 21px
    background url('../img/icons/form-light.png') left center no-repeat

.one-click-form-prices
  display flex
  margin-bottom 20px
  background url('../img/backgrounds/one-click-prices-bg.png') center
  background-size cover
  border-radius 10px

.one-click-form-price
  padding 21px 0 26px 15px
  font-family PT-Sans-Narrow-Bold
  color #ffffff
  &_sale
    position relative
    padding-left 26px
    padding-right 15px
    font-family PT-Sans-Narrow
    opacity 0.3
    overflow hidden
    &:after
      content: ''
      position: absolute
      display: block
      right: 0
      top: -121%
      background: linear-gradient(to right, rgba(255,255,255,0.1) 65%, rgba(255,255,255,0.13) 84%, rgba(255,255,255,.4) 100%)
      width: 400px
      height: 400px
      border-radius: 50%
  &__text
    display block
    margin-bottom 3px
    font-family PT-Sans-Narrow
    font-size rem(18)
  &__price
    font-size rem(48)
  &__unit
    font-size rem(23)

.one-click-form-fields
  margin-bottom 25px
  padding 0 20px
  input
    width 100%
    padding 20px 15px
    border 1px solid #e1e1e1
    border-radius 5px
    background-color #f6f6f6
    font-family OpenSans-Regular
    font-size rem(14)
    color #929292
    &::placeholder
      font-family OpenSans-Regular
      font-size rem(14)
      color #929292
    &:last-child
      margin-bottom 0
  &__name
    margin-bottom 15px
  &__button
    position relative
    width 100%
    margin-top 19px
    padding 17px 32px
    text-align right
    background linear-gradient(90deg, rgb(215,63,23) 0%, rgb(250,74,27) 100%)
    border none
    border-radius 5px
    box-shadow: 0 5px 25px 0 rgba(250, 74, 27, 0.35)
    font-family PT-Sans-Narrow-Bold
    font-size rem(22)
    text-transform uppercase
    color #ffffff
    &:before
      content ''
      position absolute
      height 100%
      width 20%
      top 0
      left 0
      background #b13412 url('../img/icons/arrow-right.png') center no-repeat
      border-radius 5px 0 0 5px

.one-click-form-sequre
  width 100%
  display flex
  padding 0 20px
  align-items center
  justify-content center
  &__img
    margin-right 10px
  &__text
    font-family PT-Sans-Narrow
    font-size rem(15)
    color #000000