@media screen and (max-width: 992px)
  .container
    width 100%
    padding 0 10px
  //home section
  .top-line
    justify-content center
    &__logo
      margin-right 50px
  .home-title
    font-size rem(44)
    text-align center
  .home-content
    grid-template-columns 40% 40%
    justify-content space-around
  .home-sale
    display none
  .one-click-form-fields__button
    padding-right 0
    text-align center


  // pleasure section
  .pleasure-section__title
    font-size rem(37)

@media screen and (max-width: 940px)
  .pleasure-section
    padding 35px 40px
    background-image none !important
  .doctor-recommend-section
    padding 26px 25px 40px
    background-image none !important
  .doctor-recommend__doctor-img
    position relative
    right 0
    bottom 0
    left 40%
    width 24%
    display block
  .doctor-recommend-signature
    position absolute
    bottom 80px
    left 25px
    width 95%

@media screen and (max-width: 768px)
  //home section
  .top-line
    flex-direction column
    align-items center
    &__logo
      margin-right 0
      margin-bottom 20px
  .home-content
    grid-template-columns 60%
    justify-content center
  .home-title
    font-size rem(46)
    text-align center
  .home-sale
    display block
    padding 20px 0 35px
  .product-desc
    display flex
    flex-direction column-reverse
  .product-actions
    width 77%
    margin 0 auto 13px
  .product-tagline
    text-align center

  // question section
  .question-form
    width 90%

  //advantages section
  .advantages-section
    background-color #000000
    &__title
      font-size rem(42)
  .advantages-content
    flex-direction column-reverse
    align-items center
  .advantages-product-img
    margin-right 0

  .doctor-recommend-signature__name
    width 40%

@media screen and (max-width: 640px)
  // question section
  .question-form
    padding 35px 10px 50px 10px
  .question-heading
    &__title
      font-size rem(42)
    &__subtitle
      font-size rem(18)
  .question-form-title__text
    font-size rem(20)

  //pleasure section
  .pleasure-section
    padding 35px 20px
    &__title
      text-align center

  .doctor-recommend-signature__name
    font-size rem(14)

@media screen and (max-width: 480px)
  //home section
  .home-content
    grid-template-columns 90%
  .garanty-desc
    display flex
    flex-direction column
  .product-actions
    width 100%
  .product-images
    overflow hidden
  .product-tagline
    width 104%
    text-align center
  .sale
    &__img
      width 90%
    &__text
      font-size rem(16)
  .sale-info-numbers__item
      padding 2px 7px
  .one-click-form-price
    padding-left 15px
  .one-click-form-fields__button
      padding-right 15px
      text-align right
  .one-click-form-sequre__text
      font-size rem(14)

  //question section
  .question-form
    width 100%
    padding-bottom 30px
  .question-heading
    &__title
      font-size rem(46)
    &__subtitle
      font-size rem(16)
  .question-form-answers
    flex-direction column
    &__button
      width 100%
      margin-bottom 20px
      &:last-child
        margin-bottom 0



  //pleasure section
  .pleasure-section
    padding 35px 20px
    &__title
      font-size rem(32)
    &__text
      font-size rem(14)

  // advantges section
  .advantages-section__title
    font-size rem(36)
  .advantages-product-img
    width 60%
  .advantages-list
    grid-template-columns 1fr 1fr


  // doctor recomended section
  .doctor-recommend-section__title
    font-size rem(38)
  .doctor-recommend__text
    font-size rem(14)
  .doctor-recommend__doctor-img
    left 0
    width 60%
    margin 0 auto 20px
  .doctor-recommend-signature
    position static
    width 100%
    flex-direction column
    &__name
      width 100%
      margin-bottom 10px
      text-align center